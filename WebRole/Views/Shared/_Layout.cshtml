<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title | Baby names | Name Dropper</title>
    <meta name="description" content="Baby name search and recommendation engine, using the names of over 70 million people worldwide to search for the top 25,000 names" />
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/custom-theme/jquery-ui-1.8.13.custom.css")" rel="stylesheet" type="text/css" />
    @*<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>*@
    
    <!--[if IE 7]><link rel="stylesheet" href="@Url.Content("~/Content/ie7.css")" /><![endif]-->
</head>
<body>
    <div id="wrapper">
        <h1 style="display: none;">
            Name&nbsp;Dropper - Baby name recommendations</h1>
        <div id="site">
            <div id="title">
                <img src="@Links.Content.i.Logo_png" alt="Name Dropper"/>
                <p>
                    Baby name search and recommendation engine - with over 25,000 of the most popular
                    names worldwide.</p>
            </div>
            <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/main.js")" type="text/javascript"></script>
            @RenderBody()
        </div>
    </div>
    <p class="footer">
        <span>Website and recommendation engine made by <a href="http://www.bradleyrees.com">
                    brad rees</a>. Powered by <a href="http://www.microsoft.com/windowsazure/">Azure</a>, <a href="http://www.asp.net/mvc/">
            MVC</a>, <a href="http://jquery.com">jQuery</a> and <a href="http://razorjack.net/quicksand/">
                Quicksand</a>, <a href="http://www.skullsecurity.org">raw data provided by</a>
            SkullSecurity</span> <span>Design inspired by <a href="http://twitter.com/riddle">@@riddle</a></span>
    </p>
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-22968309-1']);
        _gaq.push(['_setDomainName', 'none']);
        _gaq.push(['_setAllowLinker', true]);
        _gaq.push(['_trackPageview']);
        _gaq.push(['_trackPageLoadTime']);
        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    </script>
</body>
</html>
